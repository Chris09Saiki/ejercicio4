<p style="color: green"><%= notice %></p>

<% content_for :title, "Comentarios" %>

<h1>Comentarios</h1>

<div id="comentarios">
  <% @comentarios.each do |comentario| %>
    <%= render comentario %>
    <p>
      <%= link_to "Ver comentario", comentario %>
    </p>
  <% end %>
</div>

<%= link_to "Nuevo comentario", new_comentario_path, class: "new-resource-link" %>
<%= link_to "Ir a usuarios", usuarios_path, class: "extra-links" %> 
